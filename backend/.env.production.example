# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Application Settings
PROJECT_NAME=Chatbot SaaS Platform
VERSION=2.0.0
DEBUG=false
API_V1_STR=/api/v1

# Production hosts - update with your actual domains
ALLOWED_HOSTS=["https://yourdomain.com", "https://www.yourdomain.com", "https://api.yourdomain.com"]

# =============================================================================
# SUPABASE PRODUCTION CONFIGURATION
# =============================================================================

# Production Supabase instance
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key

# =============================================================================
# API KEYS - PRODUCTION VALUES
# =============================================================================

# Groq API for LLM Services
GROQ_API_KEY=your_production_groq_api_key

# Deepgram API for Voice Services  
DEEPGRAM_API_KEY=your_production_deepgram_api_key

# Hugging Face API for embeddings
HUGGINGFACE_API_TOKEN=your_production_huggingface_token

# =============================================================================
# STRIPE PRODUCTION CONFIGURATION
# =============================================================================

# Production Stripe keys
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# =============================================================================
# REDIS PRODUCTION CONFIGURATION
# =============================================================================

# Production Redis URL (Redis Cloud, AWS ElastiCache, etc.)
REDIS_URL=redis://redis-cluster.yourdomain.com:6379

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# Strong, randomly generated secret key for production
SECRET_KEY=your_production_secret_key_32_chars_minimum
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# GOOGLE DRIVE CONFIGURATION (Optional)
# =============================================================================

GOOGLE_DRIVE_CREDENTIALS_PATH=./google-drive-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_production_folder_id

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Additional security headers
TRUSTED_HOSTS=["yourdomain.com", "www.yourdomain.com", "api.yourdomain.com"]

# Rate limiting settings
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Logging level for production
LOG_LEVEL=INFO

# Enable request/response logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# DATABASE CONNECTION SETTINGS
# =============================================================================

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================

# Maximum file upload size (10MB)
MAX_FILE_SIZE=10485760

# Allowed file types
ALLOWED_FILE_TYPES=["pdf", "txt", "docx", "html", "md"]

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Cache TTL for embeddings (1 hour)
EMBEDDING_CACHE_TTL=3600

# API timeout settings
API_TIMEOUT=30

# =============================================================================
# WEBHOOK SETTINGS
# =============================================================================

# Webhook endpoints (update with your production URLs)
WEBHOOK_URL=https://api.yourdomain.com/api/v1/billing/webhooks/stripe
FRONTEND_URL=https://yourdomain.com

# =============================================================================
# SECURITY NOTES
# =============================================================================

# 1. Never commit this file to version control
# 2. Store all secrets in environment variables or secret management service
# 3. Rotate API keys regularly
# 4. Use strong, unique passwords and secrets
# 5. Enable 2FA on all accounts
# 6. Monitor API usage and set up alerts
# 7. Use HTTPS only - never serve over HTTP
# 8. Implement proper CORS policies
# 9. Regular security audits and penetration testing
# 10. Keep dependencies updated