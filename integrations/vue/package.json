{
  "name": "@chatbot-saas/vue-widget",
  "version": "1.0.0",
  "description": "Vue.js component for integrating Chatbot SaaS widgets with voice support and advanced customization",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "type-check": "vue-tsc --noEmit",
    "prepublishOnly": "npm run build",
    "dev": "vite",
    "preview": "vite preview"
  },
  "keywords": [
    "vue",
    "vue3",
    "chatbot",
    "ai",
    "voice",
    "widget",
    "customer-support",
    "saas",
    "typescript",
    "composition-api"
  ],
  "author": "Chatbot SaaS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/chatbot-saas-vue-widget.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/chatbot-saas-vue-widget/issues"
  },
  "homepage": "https://github.com/your-org/chatbot-saas-vue-widget#readme",
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-vue": "^4.2.0",
    "@vitest/ui": "^0.31.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.3.0",
    "eslint": "^8.40.0",
    "eslint-plugin-vue": "^9.13.0",
    "happy-dom": "^9.20.0",
    "rollup": "^3.21.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "vitest": "^0.31.0",
    "vue": "^3.3.0",
    "vue-tsc": "^1.6.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "sideEffects": [
    "*.css"
  ]
}
